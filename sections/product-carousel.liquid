{% liquid
  assign collection = section.settings.collection
  assign products_to_show = section.settings.products_to_show | default: 6
  assign slides_per_view = section.settings.slides_per_view | default: 4
  assign heading_tag = section.settings.heading_level | default: 'h2'
%}

<product-carousel
  class="product-carousel color-{{ section.settings.color_scheme }}"
  data-autoplay="{{ section.settings.autoplay }}"
  data-autoplay-speed="{{ section.settings.autoplay_speed }}"
  style="
    --slides-per-view: {{ slides_per_view }};
    --card-corner-radius: {{ section.settings.corner_radius }}px;
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --section-padding-left: {{ section.settings.padding_left }}px;
    --section-padding-right: {{ section.settings.padding_right }}px;
  "
>
  {% if section.settings.heading != blank %}
    <div class="product-carousel__header">
      <{{ heading_tag }} class="product-carousel__heading">
        {{ section.settings.heading | escape }}
      </{{ heading_tag }}>

      <div class="product-carousel__nav">
        <button
          type="button"
          class="product-carousel__btn"
          data-carousel-prev
          aria-label="Previous slide"
          disabled
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button
          type="button"
          class="product-carousel__btn"
          data-carousel-next
          aria-label="Next slide"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    </div>
  {% endif %}

  {% if collection != blank and collection.products_count > 0 %}
    <div class="product-carousel__track" data-carousel-track>
      {% for product in collection.products limit: products_to_show %}
        <a href="{{ product.url }}" class="product-carousel__card">
          <div class="product-carousel__image">
            {% if product.featured_image %}
              {% render 'image', image: product.featured_image, width: 600, height: 600, crop: 'center' %}
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'product-carousel__placeholder' }}
            {% endif %}
          </div>

          <div class="product-carousel__info">
            <p class="product-carousel__title">{{ product.title | escape }}</p>
            {% if section.settings.show_price %}
              <p class="product-carousel__price">{{ product.price | money }}</p>
            {% endif %}
          </div>
        </a>
      {% endfor %}
    </div>
  {% else %}
    <div class="product-carousel__empty">
      <p>Select a collection to display products.</p>
    </div>
  {% endif %}
</product-carousel>

<script src="{{ 'product-carousel.js' | asset_url }}" defer="defer"></script>

{% style %}
  .product-carousel {
    padding: var(--section-padding-top) var(--section-padding-right) var(--section-padding-bottom)
      var(--section-padding-left);
    background-color: var(--color-background);
    color: var(--color-foreground);
    max-width: var(--page-width);
    margin: 0 auto;
  }

  /* Header: heading + nav buttons */
  .product-carousel__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
  }

  .product-carousel__heading {
    margin: 0;
    font-size: 1.75rem;
  }

  .product-carousel__nav {
    display: flex;
    gap: 8px;
  }

  .product-carousel__btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1px solid var(--color-foreground);
    border-radius: 50%;
    background: transparent;
    color: var(--color-foreground);
    cursor: pointer;
    transition: background-color 0.2s ease, color 0.2s ease, opacity 0.2s ease;
  }

  .product-carousel__btn:hover:not([disabled]) {
    background-color: var(--color-foreground);
    color: var(--color-background);
  }

  .product-carousel__btn[disabled] {
    opacity: 0.3;
    cursor: not-allowed;
  }

  /* Scroll track */
  .product-carousel__track {
    display: flex;
    gap: 16px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;

    /* Hide scrollbar */
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .product-carousel__track::-webkit-scrollbar {
    display: none;
  }

  /* Product card */
  .product-carousel__card {
    flex: 0 0 calc((100% - (var(--slides-per-view) - 1) * 16px) / var(--slides-per-view));
    scroll-snap-align: start;
    text-decoration: none;
    color: inherit;
    border-radius: var(--card-corner-radius);
    overflow: hidden;
    transition: transform 0.2s ease;
  }

  .product-carousel__card:hover {
    transform: translateY(-4px);
  }

  /* Image wrapper */
  .product-carousel__image {
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: var(--card-corner-radius);
    background-color: rgba(0, 0, 0, 0.04);
  }

  .product-carousel__image .image {
    width: 100%;
    height: 100%;
  }

  .product-carousel__image .image > img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .product-carousel__card:hover .product-carousel__image .image > img {
    transform: scale(1.05);
  }

  .product-carousel__placeholder {
    width: 100%;
    height: 100%;
  }

  /* Product info */
  .product-carousel__info {
    padding: 12px 4px;
  }

  .product-carousel__title {
    margin: 0;
    font-size: 0.95rem;
    font-weight: 500;
    line-height: 1.4;
  }

  .product-carousel__price {
    margin: 4px 0 0;
    font-size: 0.875rem;
    opacity: 0.75;
  }

  /* Empty state */
  .product-carousel__empty {
    text-align: center;
    padding: 48px 16px;
    opacity: 0.6;
  }

  /* Responsive: fewer slides on smaller screens */
  @media (max-width: 999px) {
    .product-carousel {
      --slides-per-view: 3;
    }
  }

  @media (max-width: 749px) {
    .product-carousel {
      --slides-per-view: 2;
    }

    .product-carousel__heading {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 479px) {
    .product-carousel {
      --slides-per-view: 1.2;
    }
  }
{% endstyle %}

