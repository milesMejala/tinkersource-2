<div class="hero-section">
  {% for block in section.blocks %}
    {% if block.type == 'hero_image' %}
      {% render 'image', image: block.settings.hero_image %}
    {% endif %}
  {% endfor %}

  <div class="hero-content">
    {% for block in section.blocks %}
      {% if block.type == 'heading' %}
        {% liquid
          assign heading_tag = block.settings.heading_level
        %}
        <{{ heading_tag }} {{ block.shopify_attributes }}>{{ block.settings.heading }}</{{ heading_tag }}>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  .hero-section {
    height: calc(100vh - 5rem);
    position: relative;
  }
  .hero-section .image {
    width: 100%;
    height: 100%;
  }
  .hero-section .image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  .hero-content {
    position: absolute;
    top: 80%;
    left: 5%;
    z-index: 1;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero",
  "settings": [],
  "blocks": [
    {
      "type": "hero_image",
      "name": "Hero Image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "hero_image",
          "label": "Hero Image"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_level",
          "label": "Heading Level",
          "default": "h1",
          "options": [
            { "value": "h1", "label": "H1" },
            { "value": "h2", "label": "H2" },
            { "value": "h3", "label": "H3" },
            { "value": "h4", "label": "H4" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
