{% liquid
  case section.settings.text_alignment
    when 'left'
      assign align_items = 'flex-start'
    when 'center'
      assign align_items = 'center'
    when 'right'
      assign align_items = 'flex-end'
    else
      assign align_items = 'center'
  endcase
%}

<section
  class="value-props-section color-{{ section.settings.color_scheme }}"
  style="
    --columns-desktop: {{ section.settings.columns_desktop }};
    --columns-mobile: {{ section.settings.columns_mobile }};
    --gap: {{ section.settings.gap }}px;
    --text-align: {{ section.settings.text_alignment }};
    --align-items: {{ align_items }};
    --heading-font-size: {{ section.settings.heading_size }}px;
    --title-font-size: {{ section.settings.title_size }}px;
    --description-font-size: {{ section.settings.description_size }}px;
  "
>
  <div class="value-props-container">
    {% if section.settings.heading != blank %}
      <h2 class="value-props-heading">{{ section.settings.heading | escape }}</h2>
    {% endif %}

    <div class="value-props-grid">
      {% for block in section.blocks %}
        <div class="value-prop" {{ block.shopify_attributes }}>
          <div class="value-prop__content color-{{ block.settings.color_scheme }}">
            {% if block.settings.icon != 'none' %}
              <div class="value-prop__icon">
                {% render 'icon', icon: block.settings.icon, size: block.settings.icon_width %}
              </div>
            {% endif %}

            {% if block.settings.title != blank %}
              <h3 class="value-prop__title">{{ block.settings.title | escape }}</h3>
            {% endif %}

            {% if block.settings.description != blank %}
              <div class="value-prop__description">{{ block.settings.description }}</div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% style %}
  .value-props-section {
    background-color: var(--color-background);
    padding: 48px 24px;
  }

  .value-props-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .value-props-heading {
    text-align: center;
    margin-bottom: 40px;
    text-wrap: balance;
    color: var(--color-foreground);
    font-size: var(--heading-font-size);
  }

  .value-props-grid {
    display: grid;
    grid-template-columns: repeat(var(--columns-desktop), 1fr);
    gap: var(--gap);
    text-align: var(--text-align);
  }

  .value-prop {
    display: flex;
    flex-direction: column;
    align-items: var(--align-items);
  }

  .value-prop__content {
    background-color: var(--color-background);
    padding: 24px;
    border-radius: 8px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: inherit;
  }

  .value-prop__icon {
    margin-bottom: 16px;
    color: var(--color-foreground);
  }

  .value-prop__title {
    margin-bottom: 8px;
    text-wrap: balance;
    color: var(--color-foreground);
    font-size: var(--title-font-size);
  }

  .value-prop__description {
    color: var(--color-foreground);
    line-height: 1.6;
    font-size: var(--description-font-size);
  }

  @media screen and (max-width: 768px) {
    .value-props-grid {
      grid-template-columns: repeat(var(--columns-mobile), 1fr);
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Value props",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why choose us?"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading font size",
      "default": 32
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 14,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Title font size",
      "default": 18
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 32,
      "step": 1,
      "unit": "px",
      "label": "Description font size",
      "default": 16
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "label": "Columns on desktop",
      "default": "3",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" }
      ]
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Columns on mobile",
      "default": "1",
      "options": [
        { "value": "1", "label": "1" },
        { "value": "2", "label": "2" }
      ]
    },
    {
      "type": "text_alignment",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "center"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "default",
      "label": "Color scheme"
    },
    {
      "type": "range",
      "id": "gap",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Gap between columns",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "value_prop",
      "name": "Value prop",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "default": "money",
          "options": [
            { "value": "none", "label": "None" },
            { "value": "money", "label": "Money" },
            { "value": "bolt", "label": "Bolt" },
            { "value": "lock", "label": "Lock" }
          ]
        },
        {
          "type": "range",
          "id": "icon_width",
          "min": 16,
          "max": 120,
          "step": 4,
          "unit": "px",
          "label": "Icon size",
          "default": 48
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Benefit"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Describe this benefit to your customers.</p>"
        },
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "default": "default",
          "label": "Color scheme"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Value props",
      "blocks": [
        { "type": "value_prop", "settings": { "icon": "money", "title": "Cheaper" } },
        { "type": "value_prop", "settings": { "icon": "bolt", "title": "Instant Access" } },
        { "type": "value_prop", "settings": { "icon": "lock", "title": "Secure" } }
      ]
    }
  ]
}
{% endschema %}
