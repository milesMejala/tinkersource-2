    "name": "t:general.colors",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#E8F9FC"
          },
          {
            "type": "color",
            "id": "text",
            "label": "Text",
            "default": "#333333"
          },
          {
            "type": "color",
            "id": "button",
            "label": "Primary Button",
            "default": "#03045e"
          },
          {
            "type": "color",
            "id": "button_label",
            "label": "Primary Button Label",
            "default": "#FFFFFF"
