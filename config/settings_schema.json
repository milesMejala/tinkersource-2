          {
            "type": "color",
            "id": "button_border",
            "label": "Primary Button Border",
            "default": "#000000"
          },
          {
            "type": "color",
            "id": "secondary_button",
            "label": "Secondary Button",
            "default": "#ade8f4"
          },
          {
            "type": "color",
            "id": "secondary_button_label",
            "label": "Secondary Button Label",
            "default": "#03045e"
          },
          {
            "type": "color",
            "id": "secondary_button_border",
            "label": "Secondary Button Border",
            "default": "#ade8f4"
