{% render 'image',
  image: block.settings.image,
  width: 296,
  height: 296,
  class: 'block-image',
  corner_radius: block.settings.corner_radius
%}

{% stylesheet %}
  .block-image {
    border-radius: var(--corner-radius);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "corner_radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Corner radius",
      "default": 0
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Image"
    }
  ]
}
{% endschema %}
