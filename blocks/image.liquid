{% render 'image',
  image: block.settings.image,
  width: block.settings.image_width,
  height: block.settings.image_height,
  class: 'block-image',
  corner_radius: block.settings.corner_radius
%}

{% style %}
  .block-image {
    border-radius: var(--corner-radius);
  }
{% endstyle %}

{% schema %}
{
  "name": "Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "number",
      "id": "image_width",
      "label": "Image width (px)",
      "default": 296,
      "info": "Recommended: 50-1000px"
    },
    {
      "type": "number",
      "id": "image_height",
      "label": "Image height (px)",
      "default": 296,
      "info": "Recommended: 50-1000px"
    },
    {
      "type": "range",
      "id": "corner_radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Corner radius",
      "default": 0
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Image"
    }
  ]
}
{% endschema %}
