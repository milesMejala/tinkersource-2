{% doc %}
{% enddoc %}

{% liquid
  assign heading_tag = block.settings.heading_level | default: 'h1'
%}

<{{ heading_tag }} class="block-heading" {{ block.shopify_attributes }}>
  {{ block.settings.heading | escape }}
</{{ heading_tag }}>

{% style %}
  .block-heading {
    text-wrap: balance;
  }
{% endstyle %}

{% schema %}
{
  "name": "Heading",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Your heading goes here",
      "default": "Sample heading"
    },
    {
      "type": "select",
      "id": "heading_level",
      "label": "Heading level",
      "default": "h1",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" }
      ]
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Heading"
    }
  ]
}
{% endschema %}
